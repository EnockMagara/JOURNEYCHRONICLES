<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Link to Font Awesome -->
    <title>Journey Chronicles</title>
</head>
<body>
    <header>
        <h1 class="old-school-title">
            <i class="fas fa-map-marked-alt"></i> Journey Chronicles <!-- Title with icon -->
        </h1>
        <nav>
            <a href="/" class="button">Home</a> <!-- Home button -->
            <a href="/map" class="button">Map</a> <!-- Map button -->
            <a href="/upload" class="button">Upload Photos</a> 
        </nav>
    </header>
    <main class="page-content">
        <div class="gallery">
            <% files.forEach(file => { %> <!-- Loop through files -->
                <div class="photo-item">
                    <img src="/uploads/<%= file.filePath %>" alt="Uploaded photo"> <!-- Display uploaded photo -->
                    <p class="caption"><%= file.caption %></p> <!-- Display caption -->
                </div>
            <% }) %>
        </div>
    </main>
    <script>
        function onScroll() {
            const items = document.querySelectorAll('.photo-item');
            items.forEach(item => {
                const rect = item.getBoundingClientRect();
                if (rect.top < window.innerHeight && rect.bottom >= 0) {
                    item.classList.add('visible'); // Add class when in view
                } else {
                    item.classList.remove('visible'); // Remove class when out of view
                }
            });
        }

        window.addEventListener('scroll', onScroll);
        window.addEventListener('load', onScroll); // Trigger on load
    </script>
</body>
</html>
